/*********************************************************************************************
*                               HEADER FILES
*
**********************************************************************************************/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

/*********************************************************************************************
*                                       Macros
*
************************************************************************************************/
#define MAX 30

/*********************************************************************************************
*                                       User Defined Data Types
*
************************************************************************************************/
typedef struct p_queue{
				char info[MAX];
				int priority;
				struct p_queue *link;
			}node;

/************************************************************************************************
*
*                               FUNCTION DECLARATIONS
*
**************************************************************************************************/

void insert_item(node **front);
void delete_item(node **front);
void display(node **front);
void free_list(node **front);
